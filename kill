#!/bin/bash

search_word=$1

if [ -z "$search_word" ]; then
    echo "Usage: $0 <search_word>"
    exit 1
fi

matching_processes=$(pgrep -f "$search_word")

if [ -z "$matching_processes" ]; then
    echo "No processes found containing the word: $search_word"
    exit 0
fi

echo "The following processes will be killed:"
ps -fp $matching_processes

read -p "Are you sure you want to kill these processes? (y/n): " confirmation

if [[ "$confirmation" == "y" || "$confirmation" == "Y" ]]; then

    pkill -f "$search_word"
    echo "Killed all processes containing the word: $search_word"
else
    echo "Aborted."
fi

